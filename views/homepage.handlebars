<body>

  
	{{> header}}   
 
	<main class="main-page">
    
		<div class="title-container">
        
			<h2>Select codes of project</h2>
    
		</div>
   
		{{#each projects}}     
			{{> projectCard}} 
		{{/each}}      

	</main>

	<button type="button" id="add-new-post">
	<i class="fa fa-plus"></i>
</button>







	<div id="modal-backdrop" class="hidden"></div>


	<div id="new-post-modal" class="hidden modal">
    
	
		<div class="modal-dialog">
        
		
			<div class="modal-content">
            
			
				<div class="modal-header">
                
				
					<h3>Post a New Code</h3>
                
				
					<button type="button" id="modal-close" class="modal-close-button">&times;</button>
            
			
				</div>
            
			
				<div class="create-input-container">
                
				
					<label for="create-project">ProjectName</label>
                
				
					<select id="create-project" class="create-input" name="create-project">
                    
					
						<option selected value="">Type new project name</option>
  
						{{#each projects}}       
							{{> option}}           
					  
						{{/each}}              
				
					</select>
            
			
				</div>

            
			
				<div class="create-input-container">
                
				
					<label for="create-codename" class="create-input-label">Code Name:</label>
                
				
					<input type="text" name="create-codename" id="create-codename" class="create-codename">
            
			
				</div>

            
			
				<div class="create-input-container">
                
				
					<label for="create-code" class="create-input-label">Code Image:</label>
                
				
					<input type="text" name="create-code" id="create-code" class="create-code">
            
			
				</div>


				<div class="create-input-container">
                
				
					<label for="create-code-link" class="create-input-label">Code Link:</label>
                
				
					<input type="text" name="create-link" id="create-code-link" class="create-code-link">
            
			
				</div>

            
			
				<div class="modal-footer">
                

					<button type="button" id="modal-project" class="modal-project-button action-button">New Project</button>







				
					<button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
                

					<button type="button" id="modal-accept" class="action-button">Create Post</button>
            
			
				</div>
        
		
			</div>
    
	
		</div>


	</div>

	<div id="new-project-modal" class="hidden modal">
    
	
		<div class="modal-dialog">
        
		
			<div class="modal-content">
            
			
				<div class="modal-header">
                
				
					<h3>Create a New Project</h3>
                
				
					<button type="button" id="project-modal-close" class="modal-close-button">&times;</button>
            
			
				</div>
            
			           
			
				<div class="create-input-container">
                
				
					<label for="project-name" class="project-name">Project Name:</label>
                
				
					<input type="text" name="project-name" id="project-name" class="project-name">
            
			
				</div>

            
			         
			
				<div class="modal-footer">
                
			
					<button type="button" id="project-modal-cancel" class="modal-hide-button action-button">Cancel</button>
                

					<button type="button" id="project-accept" class="action-button">Create Project</button>
            
			
				</div>
        
		
			</div>
    
	
		</div>


	</div>

</body>


